extends layout

block content
  h1= title
  for post in posts
    .post
      h2= post.title
      p= post.createdAt
    if user
      if user.isMember
        p= post.author.fullName
      else if user._id.toString() == post.author._id.toString()
        p= post.author.fullName
      else
        .redacted
    else
      p Annonymous
        a(href="/club/join") <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
    p= post.text